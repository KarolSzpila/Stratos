#ifndef FLIGHTCONTROL_AIRCRAFT_H_
#define FLIGHTCONTROL_AIRCRAFT_H_

#include "string"
#include "ADSBMessage.h"

#define DEFAULT_LIVE_SAPAN 60 //sec
class Aircraft
{
public:
	Aircraft(const std::string& ICAO_Address);

	std::string GetICAO() const {return ICAO_Address;}
	bool IsAicraftExpired() const {return aircraftExpiered;}

	void UpdateStatus(const ADS_BMessage& msg);
	void Tick();

private:
	std::string ICAO_Address;

	std::string FlightName;
	uint32_t altitude;

	uint8_t leftLiveSpan;
	bool aircraftExpiered;

};

#endif /* FLIGHTCONTROL_AIRCRAFT_H_ */
