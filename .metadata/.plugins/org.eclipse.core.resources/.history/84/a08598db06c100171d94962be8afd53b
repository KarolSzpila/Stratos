#ifndef FLIGHTCONTROL_FLIGHTCONTROL_H_
#define FLIGHTCONTROL_FLIGHTCONTROL_H_

#include <AircraftRecord.h>
#include <string>
#include <list>

#include "ADSBMessage.h"

class FlightControl
{
public:
	FlightControl();

	bool FindAircraftByICAO_Address(const std::string& ICAO_Address,AircraftRecord& record);
	void AddRecord(const AircraftRecord& record);

	bool IsModelChanged() const {return modelChanged;}
	void TickAllRecords(uint32_t ticks);
private:
	std::list<AircraftRecord> aircrafts;
	bool modelChanged;


};

#endif /* FLIGHTCONTROL_FLIGHTCONTROL_H_ */
